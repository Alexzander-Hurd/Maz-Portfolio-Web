---
import "../styles/global.css";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description: string;
  date: Date;
  image: ImageMetadata;
  colour: string;
}

const { title, date, description, image, colour } = Astro.props;
---

<div class="art-piece">
  <div class="art-piece-image d-block mb-2">
    <img src={image.src} alt={title} />
  </div>
  <div
    class="art-piece-info d-block mb-2"
    style={`background-color: ${colour};`}
  >
    <h4>{title}</h4>
    <p>
      {
        date.toLocaleDateString("en-GB", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })
      }
    </p>
    <p>{description}</p>
  </div>
</div>
